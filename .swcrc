{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "paths": {
      "@api/*": ["src/api/*"],
      "@shared/*": ["src/shared/*"]
    },
    "baseUrl": "./"
  },
  "minify": false
}
