// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String    @id @default(uuid())
  userId    String    @unique
  firstName String
  lastName  String
  email     String    @unique
  phone     String?   @unique
  birthdate DateTime
  sex       Sex
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  Expense   Expense[]
}

model Expense {
  id         String          @id @default(uuid())
  customerId String
  amount     Decimal         @db.Decimal(10, 2)
  date       DateTime
  category   ExpenseCategory
  customer   Customer        @relation(fields: [customerId], references: [id])
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @default(now()) @updatedAt
}

enum Sex {
  MALE
  FEMALE
}

enum ExpenseCategory {
  FOOD
  MEDICINE
  CLOTHES
  UTILITY_PAYMENTS
  ANIMALS
  PLACES_TO_EAT
  EDUCATION
  BOOKS
  TAXI
  GIFTS
  DONATIONS
  MOBILE_SERVICES
  SUBSCRIPTIONS
  SPORTS
  ENTERAINMENT
  BEAUTY_AND_CARE
  HOUSEHOLD
  PUBLIC_TRANSPORT
  TRAVEL
  OTHER
}
