{
  "name": "fin-control-be",
  "version": "1.0.0",
  "private": true,
  "description": "BE for self finances tracking application",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postinstall": "patch-package --error-on-fail",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrations:run": "prisma migrate deploy",
    "sonar": "node --env-file=.env sonar-scanner.mjs",
    "start": "node --env-file=.env dist/main.js",
    "start:bun": "bun run dist/main.js",
    "start:debug": "nest start --debug --watch -e 'node --env-file=.env'",
    "start:dev": "nest start --watch -e 'node --env-file=.env'",
    "start:prod": "node --enable-source-maps dist/main",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --no-file-parallelism",
    "test:e2e": "vitest run --config ./test/vitest.config.e2e.mjs",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/static": "^8.0.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/under-pressure": "^9.0.3",
    "@geut/fastify-uws": "^6.0.0",
    "@keyv/valkey": "^1.0.2",
    "@nestjs/cache-manager": "^3.0.0",
    "@nestjs/common": "^11.0.6",
    "@nestjs/core": "^11.0.6",
    "@nestjs/platform-fastify": "^11.0.6",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.0.3",
    "@node-rs/jsonwebtoken": "^0.5.9",
    "@prisma/adapter-pg": "^6.3.0",
    "@prisma/client": "^6.3.0",
    "async-cache-dedupe": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "drizzle-orm": "^0.39.0",
    "fastify": "^5.2.1",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "get-jwks": "^11.0.0",
    "ioredis": "^5.4.2",
    "keyv": "^5.2.3",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "prisma-error-enum": "^0.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.6",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.10.11",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/eslint__js": "^8.42.3",
    "@types/k6": "^0.54.2",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@vitest/coverage-v8": "^3.0.4",
    "drizzle-prisma-generator": "^0.1.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-security": "^3.0.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.3.0",
    "semantic-release": "^24.2.1",
    "sonarqube-scanner": "^4.2.6",
    "supertest": "^7.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": "22.13.0"
  }
}
