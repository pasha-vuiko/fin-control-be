{
  "name": "fin-control-be",
  "version": "1.0.0",
  "private": true,
  "description": "BE for self finances tracking application",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "postinstall": "patch-package --error-on-fail",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migrations:run": "prisma migrate deploy",
    "sonar": "node --env-file=.env sonar-scanner.mjs",
    "start": "node --env-file=.env dist/src/main.js",
    "start:bun": "bun run dist/src/main.js",
    "start:debug": "nest start --debug --watch -e 'node --env-file=.env'",
    "start:dev": "nest start --watch -e 'node --env-file=.env'",
    "start:prod": "node --enable-source-maps dist/src/main",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --no-file-parallelism",
    "test:e2e": "vitest run --config ./test/vitest.config.e2e.mjs",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/under-pressure": "^9.0.3",
    "@geut/fastify-uws": "^6.0.0",
    "@keyv/valkey": "^1.0.7",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/platform-fastify": "^11.1.5",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@node-rs/jsonwebtoken": "^0.5.9",
    "@prisma/adapter-pg": "^6.12.0",
    "@prisma/client": "^6.12.0",
    "async-cache-dedupe": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.4.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "get-jwks": "^11.0.1",
    "ioredis": "^5.6.1",
    "keyv": "^5.4.0",
    "pg": "^8.16.3",
    "pg-error-enum": "^1.0.2",
    "pg-native": "^3.5.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma-error-enum": "^0.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.13.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/k6": "^1.1.1",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.2",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-prisma-generator": "^0.1.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "patch-package": "^8.0.0",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "semantic-release": "^24.2.7",
    "sonarqube-scanner": "^4.3.0",
    "supertest": "^7.1.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "unplugin-swc": "^1.5.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "22.17.0"
  },
  "overrides": {
    "typescript": "^5.8.3",
    "fastify": "^5.4.0"
  }
}
